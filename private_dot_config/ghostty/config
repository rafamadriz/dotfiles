mouse-hide-while-typing = true
maximize = true

command = /usr/bin/env zsh --login -c "if [ -x "$(command -v tmux)" ] && [ -n "${DISPLAY}" ] && [ -z "${TMUX}" ]; then tmux new-session -A -s main >/dev/null 2>&1; fi"

# don't confirm when closing window/terminal
confirm-close-surface = false

# disable all ligatures
font-feature = -liga
font-feature = -calt
font-feature = -dlig

# keep Ghostty running all the time so that new window creation will always be fast
# Better if used with systemd: systemctl enable --user app-com.mitchellh.ghostty.service
# https://ghostty.org/docs/linux/systemd
quit-after-last-window-closed = false

shell-integration = zsh

