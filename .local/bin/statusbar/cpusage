#!/bin/sh
case "$1" in
--popup)
    notify-send "CPU Hogs" "$(ps axch -o cmd:10,pcpu k -pcpu | head | awk '$0=$0"%"')"
    ;;
*)
    echo "$(grep 'cpu ' /proc/stat | awk '{cpu_usage=($2+$4)*100/($2+$4+$5)}
        END {printf "%0.2f%", cpu_usage}')
        ï‹‰ $(sensors | grep temp1 | head -1 | awk '{print $2}')"
    ;;
esac
